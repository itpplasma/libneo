% Math shorthands
\newcommand{\ga}[1]{\left\langle #1\right\rangle} % Gyro average
\newcommand{\fa}[1]{\left\langle #1\right\rangle} % Flux surface average

\newcommand{\pd}[2]{\frac{\partial #1}{\partial #2}} % for partial derivatives
\newcommand{\pdd}[2]{\frac{\partial^2 #1}{\partial #2^2}} % for second partial derivatives
\newcommand{\od}[2]{\frac{\rd #1}{\rd #2}} % for second ordinary derivatives
\newcommand{\pdone}[1]{\frac{\partial}{\partial #1}} % for partial derivatives without derived quantity (i.e. only symbol d/dx)
\newcommand{\odone}[1]{\frac{\rd}{\rd #1}} % for ordinary derivatives without derived quantity (i.e. only symbol d/dx)

\newcommand{\ve}[1]{{\bf #1}}% For marking vector symbols.
\newcommand{\uv}[1]{{\bf #1}}% For marking unit vector symbols.

